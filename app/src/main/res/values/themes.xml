<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieList" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brown_700</item>
        <item name="colorPrimaryVariant">@color/brown_900</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.MovieList.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.MovieList.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.MovieList.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarColoredBackArrow" parent="Theme.MovieList">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="BackgroundColor" parent="Theme.MovieList">
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="AppBarTheme" parent="Theme.MovieList">
        <item name="android:background">@color/brown_700</item>
        <!-- Text Size -->
        <item name="android:textSize">20sp</item>
        <!-- Query Text Color -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">@color/grey_400</item>
    </style>

    <style name="BottomNavStyle" parent="Theme.MovieList">
        <item name="android:background">@color/black</item>
    </style>

    <style name="ItemListText" parent="Theme.MovieList">
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <!--<item name="android:textColor">@color/orange</item>-->
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <!-- Text Size -->
        <item name="android:textSize">12sp</item>
        <!-- Query Text Color -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">@color/grey_400</item>
        <!-- Icon Color -->
        <!--<item name="android:tint">@color/textColorPrimary</item>-->
    </style>

</resources>